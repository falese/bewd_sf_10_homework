
<div class="col-xs-12">
  <div class="table-responsive">
    <h1 class="roboto_font" style="color:red;">Here are the Artists</h1>
    <table class="table table-hover">

<!--This is a table row with headers  -->
      <tr>
        <th>Artist Image</th>
        <th>Name</th>
        <th>Description</th>
  
      </tr>
      <% @artists.each do |artist| %>
      <tr>
        <td class="col-md-2"> <%=link_to artist_path(artist) do %>
          <%=image_tag(artist.image_url,class: 'img-thumbnail img-responsive')%>
          <% end %>
        </td>
        <td> <%=artist.name %> </td>
        <td> <%=artist.description %> </td>
        <td>



        </td>
      <% end %>
    </table>
  </div>
  <div class="well">
    <%= link_to "Add new Artist", new_artist_path, class:'btn btn-default btn-large' %>
</div>
