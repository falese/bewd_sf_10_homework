
<div class="col-xs-12">
  <div class="table-responsive">
    <h1 style="color:red; font-family: 'Roboto', sans-serif;">Here are the Artists</h1>
    <table class="table table-hover">

<!--This is a table row with headers  -->
      <tr>
        <th>Title</th>
        <th>Length</th>
        <th>Genre</th>

      </tr>
      <% @songs.each do |song| %>
      <tr>
        <td><%=song.title %>  </td>
        <td> <%=song.length %> </td>
        <td> <%=song.genre %> </td>
        <td>

          <%=link_to 'Show', song_path(song), class: 'btn btn-default btn-xs' %>
          <%=link_to 'Edit', edit_song_path(song), class: 'btn btn-success btn-xs' %>
          <%=link_to 'Delete', song, method: :delete, data: {confirm: "DESTROY?"}, class: 'btn btn-danger btn-xs' %>
        </td>
      <% end %>
    </table>
  </div>
  <div class="well">
    <%= link_to "Add new Song", new_song_path, class:'btn btn-default btn-large' %>
</div>
